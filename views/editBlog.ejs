<%- include("partials/header") %>

<!-- WALLPAPER -->
	
	
	<header id="homeHead" ><img src="images/tintuc.jpg" size="100%"></header>
	  
	<!-- MAIN -->
	<div class="container mt-5">
		 <div class="row">
		 	<div class="col-12">
		 		<h1 style="text-align: center" class="createHeadline">Edit Blog: <%= blog.title %></h1>

		 		<div class="text-left my-4">
					<a class="btn backBtn" href="/tintuc/<%= blog._id %>">Go back</a>
				</div>

		 	</div>
	        
	        <div class="col-12 blogContainer mt-3">
	        	<div style="width: 80%; margin: 25px auto;" >

				<form action="/tintuc/<%= blog._id %>?_method=PUT" method="POST" class="my-5" enctype="multipart/form-data">

					<div class="form-group">
                    	<input class="form-control" type="text" name="blog[title]" value="<%= blog.title %>">
	                </div>

	                <div class="form-group">
	                     <input 
	                	type="file" 
	                	name="blogImage" 
	                	id="input-files" 
	                	class="form-control-file border"
	                    />
	                </div>

	                <div class="form-group">
	                    <input class="form-control" type="text" name="blog[lead]" value="<%= blog.lead %>">
	                </div>

	                <div class="form-group">
	                	<textarea class="form-control textArea" name="blog[text]" rows="100"><%= blog.text %></textarea>
	                </div>

	                <div class="form-group mt-5"  >
	                    <button class="btn btn-lg backBtn btn-block">CẬP NHẬT BÀI VIẾT</button>
	                </div>

				</form>

				</div>
	        </div>
	        
		</div>

	</div>


<%- include("partials/footer") %>