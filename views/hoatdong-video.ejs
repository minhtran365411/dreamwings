<%- include("partials/header") %>


	<!-- WALLPAPER -->
	
	
	<header id="homeHead" ><img src="images/hoatdongkiniem.jpg" size="100%"></header>


	<div class="container-fluid mt-5">
		
		<section class="pageContent">
			
			<p id="introText">Nơi lưu trữ những khoảng khắc học tập đầy sáng tạo vui tươi với không khí hào hứng, trận cười thả ga của cô, thầy và trò của Dreamwings English. Những giờ học và làm việc nhóm với không khí cạnh tranh hào hứng, giúp các em phát triển ngôn ngữ qua nhiều phương diện.</p>
		</section>

	<hr class="mid-hori">

	<% if(currentUser){ %>

	<section class="pageContent">

		 
	     <div class="container" style="margin: 0 auto; text-align: center;" id="videoUpload">
	      

	          <form class="mt-4"
	           action="/hoat-dong-ki-niem-videos"
	            method="POST"
	            enctype="multipart/form-data"
	          >
	            <div class="form-group">
	                <input 
	                	type="file" 
	                	name="video" 
	                	multiple 
	                	id= "input-multi-files"
	                	class="form-control-file border"
	                />
	            </div>

	            <button type="submit" class="btn btn-primary my-4" id="videoSubmit" >Submit</button>

	          </form>

	       

	    </div>
		

	</section>

	<hr class="mid-hori">

	<% } %>

	<section class="pageContent">

		<div style="width: 40%; margin: 5% auto;">
			<h1>
				<span id="options"><a href="/hoat-dong-ki-niem" class="galleryBtn">IMAGES</a></span>
				<span style="padding-left: 3%;"><a href="/hoat-dong-ki-niem/videos" class="galleryBtn">VIDEOS</a></span>
			</h1>
		</div>


		<div class="row" class="gallery" id="videoGallery">
			<% videos.forEach(function(video) { %>

				<div class="col-lg-6 mb-3">
					<video width="100%" height="auto" controls>
					  <source src="<%= video.videoURL %>" type="video/mp4" class="img-fluid">
					  <source src="<%= video.videoURL %>" type="video/ogg" class="img-fluid">
					Your browser does not support the video tag.
					</video>
				</div>

			<% }); %>
			

		</div>
	

	</section>
	

	<!-- xong r nek nha -->


	</div>

<%- include("partials/footer") %>